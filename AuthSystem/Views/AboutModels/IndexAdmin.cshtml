@model IEnumerable<AuthSystem.Models.AboutModel>

@{
    ViewData["Title"] = "O nas - Admin";
}

<p>
    <a class="btn btn-success" asp-action="Create">Dodaj wpis</a>
</p>

<div>
    <div class="card mb-0" style="background-color: #f2f2f2">
        <h3 class="text-center">O nas</h3>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    @foreach (var item in Model)
                    {
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.AboutContent)</p>
                        </div>
                        <label> </label>
                        <p>
                            <a asp-action="Edit" asp-route-id="@item.AboutId" class="btn btn-warning">Edytuj</a>
                            <a asp-action="Delete" asp-route-id="@item.AboutId" class="btn btn-danger">Usuń</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
