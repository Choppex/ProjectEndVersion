@model AuthSystem.Models.AboutModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-sm card">

        <h1>Dodaj nowy wpis</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Tytuł</label>
                <input asp-for="Title" class="form-control" placeholder="Tytuł" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutContent" class="control-label">Treść</label>
                <textarea rows="8" cols="20" asp-for="AboutContent" class="form-control"></textarea>
                @*<input asp-for="Content" class="form-control" />*@
                <span asp-validation-for="AboutContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-success" />
                <label> </label>
                <a class="btn btn-warning" asp-action="IndexAdmin">Wróc</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
