@model AuthSystem.Models.PaymentModel

@{
    ViewData["Title"] = "Usuń";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="background-color: #f2f2f2">

    <div class="container mt-4 mb-4">
        <h3>Napewno chcesz usunąć?</h3>
        <div class="card">
            <div class="card-header">
                <h3>@Html.DisplayFor(model => model.Title)</h3>
            </div>
            <div class="card-body">
                <p class="text-muted">@Html.DisplayFor(model => model.Date)</p>
                <p>@Html.DisplayFor(model => model.Content)</p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PaymentId" />
                    <input type="submit" value="Usuń" class="btn btn-danger" />
                    <label></label>
                    <a class="btn btn-warning" asp-action="IndexAdmin">Wróc do listy</a>
                </form>
            </div>
        </div>
    </div>
</div>


