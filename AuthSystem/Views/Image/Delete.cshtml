@model AuthSystem.Models.ImageModel

@{ ViewData["Title"] = "Usuń"; }

<div class="card" style="background-color: #f2f2f2">

    <div class="container mb-4 mt-4">
        <h3>Napewno chcesz usunąć?</h3>
        <div class="card">
            <div class="card-header">
                <h3>@Html.DisplayFor(model => model.Title)</h3>
            </div>
            <div class="card-body">
                @Html.DisplayFor(model => model.ImageName)
                <p>
                    <img src="@("~/image/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
                </p>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ImageId" />
                    <input type="submit" value="Usuń" class="btn btn-danger" />
                    <label> </label>
                    <a class="btn btn-warning" asp-action="IndexAdmin">Wróć do listy</a>
                </form>
            </div>
        </div>
    </div>
</div>