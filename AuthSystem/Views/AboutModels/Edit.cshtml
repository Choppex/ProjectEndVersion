@model AuthSystem.Models.AboutModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card">
    <div class="card-header">
        <h3>@Html.DisplayFor(model => model.Title)</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AboutId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutContent" class="control-label"></label>
                <textarea rows="8" cols="20" asp-for="AboutContent" class="form-control"></textarea>
                <span asp-validation-for="AboutContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card-footer">
        <label />
        <a class="btn btn-warning" asp-action="IndexAdmin">Wróć</a>
    </div>
</div>
